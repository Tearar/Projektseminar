<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="ur.de.projektseminar_adm.MainActivity">


    <Button
        android:text="Set date and start time of new Event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mPickDateAndStartTimeButton" />

    <Button
        android:text="Set end time of new Event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mPickEndTimeButton" />

    <Button
        android:text="Call API"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mCallApiButton" />

    <Button
        android:text="Write CSV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mWriteToStorageButton" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mOutPutText"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:maxLines = "200"
        android:scrollbars = "vertical"/>
</LinearLayout>
